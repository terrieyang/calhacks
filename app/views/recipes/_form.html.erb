<%= form_for(@recipe) do |f| %>
	<fieldset>
	    <ol>
	        <%= f.label :name %>
	        <%= f.text_field :name, autofocus: true %><br />

	        <%= f.label :rating %>
	        <%= f.text_field :rating, autofocus: true %><br />


	        <%= f.label :servings %>
	        <%= f.text_field :servings, autofocus: true %><br />
	        
	        <%= f.label :target %>
	        <%= f.text_field :target, autofocus: true %><br />
	        
	        <%= f.label :time %>
	        <%= f.text_field :time, autofocus: true %><br />

	        <%= f.label :Ingredients %><br>
			<% f.fields_for @recipe.ingredients do |ing| %>
			    <p>
			      <%= ing.label :ing_name %>
					<%= f.collection_select :ingredient_count, Ingredient.all, 
                        :id, :name, { include_blank: true }%>
			      <%= ing.check_box :destroy %>
			      <%= ing.label :destroy, 'delete' %>
			    </p>
			  <% end -%>
			  <p>
			<%= f.submit 'Add ingredient', :name => "add_ingredient" %>
    		<%= f.submit 'Delete checked ingredients', :name => "remove_ingredient" %>
    		</p>

	    </ol>
	    <p>
	      <%= f.submit %>
	      <%= link_to "Cancel", recipes_path, class: 'button' %>
	      </li>
	    </p>
	</fieldset>
<% end %>
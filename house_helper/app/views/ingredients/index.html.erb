<h1>Ingredients</h1>

<%= link_to 'Add New Ingredient', new_ingredient_path, class: 'button' %>

<%@ingredients.each do |ingredient| %>
	<h2><%= ingredient.name %></h2>
	<table>
          <tr>
            <th>Location</th>
            <td><%= ingredient.location %></td>
          </tr>
          <tr>
            <th>Category</th>
            <td><%= ingredient.category %></td>
          </tr>
        </table>
      <%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'button'%>  
      <%= link_to 'Delete', ingredient, class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %> 
  <% end %>

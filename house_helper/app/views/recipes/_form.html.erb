<%= form_for(@recipe) do |f| %>
	<fieldset>
	    <ol>
	        <%= f.label :name %>
	        <%= f.text_field :name, autofocus: true %><br />

	        <%= f.label :rating %>
	        <%= f.text_field :rating, autofocus: true %><br />


	        <%= f.label :servings %>
	        <%= f.text_field :servings, autofocus: true %><br />
	        
	        <%= f.label :target %>
	        <%= f.text_field :target, autofocus: true %><br />
	        
	        <%= f.label :time %>
	        <%= f.text_field :time, autofocus: true %><br />

	        <%= f.label :ingredient_count %>
	        <%= f.text_field :ingredient_count, autofocus: true %><br />

	        <%= f.label :Ingredients %><br>
	        <%= f.autocomplete_field :ingredient_ids, autocomplete_ingredient_name_recipes_path %>


	    </ol>
	    <p>
	      <%= f.submit %>
	      <%= link_to "Cancel", recipes_path, class: 'button' %>
	      </li>
	    </p>
	</fieldset>
<% end %>